<?xml version="1.0"?>
<ruleset name= "Laravel PHPCS Rules">
    <description>PHPCS ruleset for 1 Natural Way.</description>

    <file>src</file>
    <file>samples</file>

    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Show progress of the run -->
    <arg value= "p"/>

    <!-- Show sniff codes in all reports -->
    <arg value= "s"/>

    <!-- Our base rule: set to PSR12 -->
    <rule ref="PSR1">
      <exclude name="PSR1.Methods.CamelCapsMethodName" />
    </rule>
    <rule ref="PSR2">
      <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine" />
      <exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine" />
      <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/migrations</exclude-pattern>
      </exclude>
    </rule>
    <rule ref="PSR12">
      <rule ref="PSR12.ControlStructures.ControlStructureSpacing">
        <properties>
            <property name="indent" value="2" />
        </properties>
      </rule>
    </rule>

    <rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie" />
    <rule ref="Generic.Classes.OpeningBraceSameLine"/>

    <rule ref="Squiz.Classes.ValidClassName">
      <exclude-pattern>src/Brightree/ApiMessageServices/eClaimsInfo</exclude-pattern>
    </rule>

    <rule ref="Squiz.WhiteSpace">
      <exclude name="Squiz.WhiteSpace.FunctionClosingBraceSpace" />
    </rule>

    <rule ref= "Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="1000"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="2" />
            <property name="exact" value="true" />
        </properties>
    </rule>
    <rule ref="Generic.Formatting.SpaceAfterNot">
        <properties>
            <property name="spacing" value="0" />
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.FunctionSpacing">
        <properties>
            <property name="spacing" value="1" />
            <property name="spacingBeforeFirst" value="0" />
            <property name="spacingAfterLast" value="0" />
        </properties>
    </rule>

    <rule ref="Squiz.WhiteSpace.MemberVarSpacing">
        <properties>
            <property name="spacing" value="1" />
            <property name="spacingBeforeFirst" value="0" />
        </properties>
    </rule>

    <rule ref="Squiz.WhiteSpace.ObjectOperatorSpacing">
        <properties>
            <property name="ignoreNewlines" value="true" />
        </properties>
    </rule>
</ruleset>
